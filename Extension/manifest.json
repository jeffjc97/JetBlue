{
  "manifest_version": 2,

  "name": "JetBlue Deals",
  "description": "Get the best deals on trips to places you've always wanted to go!",
  "version": "1.0.0",

  "browser_action": {
    "default_icon": "icon16.png",
    "default_popup": "popup.html"
  },

  "background": {
    "scripts": ["background.js", "jquery.min.js"]
  },

  "icons": { 
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png" },

  "permissions": [
    "tabs", 
    "*://*.facebook.com/*",
    "storage",
    "https://ajax.googleapis.com/",
    "https://ancient-fjord-1030.herokuapp.com/query/*"
  ],

  "content_scripts": [
    {
      "matches": ["*://*.facebook.com/*"],
      "css": ["css/styles.css"],
      "js": ["jquery.min.js", "externals/Knwl/dist/knwl.js", "newsfeed.js"]
    }
  ]
}
